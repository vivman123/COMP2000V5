<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/holidays_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage your holidays here."
        android:textSize="16sp"
        android:layout_marginBottom="16dp"/>

    <!-- Other views can go here (EditTexts, Buttons, etc.) -->

    <Button
        android:id="@+id/book_holiday_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Book a Holiday" />

    <Button
        android:id="@+id/backbuttonholiday"
        android:layout_width="64dp"
        android:layout_height="58dp"
        android:background="@drawable/backbutton" />

</LinearLayout>